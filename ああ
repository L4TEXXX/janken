class Finger
    def FingerGame
        puts "あっち向いて・・・"
        puts "[0]上\n[1]右\n[2]下\n[3]左"
    
        player_finger = gets.to_i
        program_finger = rand[4]
    
        if player_finger == program_finger
            puts "あなたの勝ちです"
            return false
        else
            puts "もう一回"
            return true
        end  
    end
end

